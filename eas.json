{
  "cli": {
    "version": ">= 16.16.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "https://job-notifier-manager-production.up.railway.app"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "https://job-notifier-manager-production.up.railway.app"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_BASE_URL": "https://job-notifier-manager-production.up.railway.app",
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}",
        "SENTRY_ORG": "job-notifier-manager",
        "SENTRY_PROJECT": "react-native"
      }
    }
  },
  "hooks": {
    "pre-build": "sentry-cli releases new $EAS_BUILD_ID && sentry-cli releases set-commits $EAS_BUILD_ID --auto",
    "post-build": "npx sentry-expo upload-sourcemaps"
  },
  "submit": {
    "production": {}
  }
}
